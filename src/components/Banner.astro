---
const { titulo, subtitulo, access } = Astro.props
import ButtonInsc from "./ButtonInsc.astro";
---

<div class="cont">
    <h1>{titulo}</h1>
    <p>{subtitulo}</p>
    <ButtonInsc button={access}/>
</div>

<style>

.cont{
  align-items: center;
  display: flex;
  flex-direction: column;  
  text-align: center;
}

.cont  h1 {
  position: relative;
  font-weight: 900;
  font-size: 44px;
  padding: 0 6%;
}

.cont  p {
  position: relative;
  font-size: 16px;
  padding: 2% 8%;
}

@media (max-width: 600px) {
  .cont  h1 {
    font-size: 30px;
  }

  .cont  p {
    font-size: 12px;
    padding: 4% 2%;
  }
}
</style>