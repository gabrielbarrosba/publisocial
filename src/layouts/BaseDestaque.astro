---
import CardDestaque from '../components/CardDestaque.astro';
const profiles = await fetch('http://localhost:8080/eventos').then(res => res.json())

---
<section>
  <h2>Eventos em Destaque</h2>

  <div class="l-base-layout">   
    {profiles.map(profile => (
      <CardDestaque
        name={`${profile.name}`}
        date={profile.date}
        address={`${profile.local}`}
      />
    ))}
  </div>
</section>


<style>
.l-base-layout {
  display: grid;
  gap: 15px;
  grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
  margin: auto;
  max-width: min(100%, 900px);
  padding: 1% 8% 4% 8%;
}

h2{
  text-align: center;
  padding-top: 2.2%;
  padding-bottom: 2.2%;
  font-weight: 700;
  color: #f36e2d;
}

@media (max-width: 600px) {
  h2{
    font-size: 26px;
    padding-top: 4%;
  }
}
</style>